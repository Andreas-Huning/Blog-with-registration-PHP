<div class="d-flex flex-wrap">
    {% for post in posts %}
        <div class="card m-3" style="width: 30rem;">
            <img src="{{ post.postImagePath }}" class="card-img-top" alt="{{ post.postTitel }}">
            <div class="card-body">
                <p class="card-text">Erstellt von: <strong>{{ post.account.accountName }}</strong> ({{ post.account.accountRole.accRoleName }}) am {{ post.postDate }}</p> 
                <h5 class="card-title">{{ post.postTitel }}</h5>                 
                <p class="card-text">{{ post.postText }}</p>
                <a href="{{BASE_URL}}/profil.php?action=showprofil&user={{ post.account.accountName }}" class="btn btn-primary">zum Profil</a>
                     
            </div>
        </div>
    {% endfor %}  
</div>
{% endblock %}