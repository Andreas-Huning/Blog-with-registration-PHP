 {% extends 'base.html.twig' %}

{% block title %}Adresse anpassen{% endblock %}

{% block content %}
<h2 class="text-center">Adresse anpassen</h2>
<div class="container">
	<img class="imgavatar " src="{{ user.userAvatarPath }}" alt="Avatar von {{ user.userName }}" title="Avatar von {{ user.userName }}">
	<h3>Username: '{{ account.accountName }}'</h3>
	<p>BenutzerRolle: '{{ account.accountRole.accRoleName }}'</p> 
	<p>Mitglied seit: {{ date.date }}</p>
	<p>User ID: {{ user.userId }}</p>
	<p>Email: {{ user.userEmail }}</p>
	<p>Status: {{ user.userState.userStatesLabel }}<i></i></p>
</div>
<div class="container">
	<form class="row g-3" action="{{BASE_URL}}/admin/user/updateAddr.php" method="POST">
		<input type="hidden" name="formAddUserData">
         <div class="col-12">
            <label for="adrNameForm" class="form-label">Name</label><span class="text-danger"></span>
            <input type="text" class="form-control" id="adrNameForm" name="adrNameForm" placeholder="Name" required>
        </div>       	
        <div class="col-12">
            <label for="userStreetForm" class="form-label">Strasse</label><span class="text-danger"></span>
            <input type="text" class="form-control" id="userStreetForm" name="userStreetForm" placeholder="Strasse">
        </div>
        <div class="col-4">
            <label for="userStreetNrForm" class="form-label">Hausnummer</label><span class="text-danger"></span>
            <input type="text" class="form-control" id="userStreetNrForm" name="userStreetNrForm" placeholder="Hausnummer">
        </div>
        <div class="col-4">
            <label for="userZipCodeForm" class="form-label">Postleitzahl</label><span class="text-danger"></span>
            <input type="text" class="form-control" id="userZipCodeForm" name="userZipCodeForm" placeholder="Postleitzahl">
        </div>
        <div class="col-4">
            <label for="userCityForm" class="form-label">Ort</label><span class="text-danger"></span>
            <input type="text" class="form-control" id="userCityForm" name="userCityForm" placeholder="Ort">
        </div>
        <div class="col-6">
            <button type="submit" class="btn btn-primary">Speichern</button>
        </div>		
	</form>					
</div>
<table class="table table-striped table-hover">
    <tr>
        <td>Name</td>
        <td>Strasse</td>
        <td>Hausnummer</td>
        <td>Postleitzahl</td>
        <td>Ort</td>
    </tr>
    {% for address in addressArray %}
        <tr>
            <td>{{ address.adrName }}</td>        
            <td>{{ address.adrStreet }}</td>        
            <td>{{ address.adrStreetNr }}</td>        
            <td>{{ address.adrZipCode }}</td>        
            <td>{{ address.adrCity }}</td>        
  
        </tr>
    {% endfor %}    
</table>

{% endblock %}